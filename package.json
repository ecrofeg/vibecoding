{
  "name": "vibecoding",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "pnpm --filter @vibecoding/frontend dev",
    "dev:backend": "pnpm --filter @vibecoding/backend dev",
    "dev:all": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "build:frontend": "pnpm --filter @vibecoding/frontend build",
    "build:backend": "pnpm --filter @vibecoding/backend build",
    "lint": "pnpm -r lint",
    "tsc": "pnpm -r tsc",
    "db:generate": "pnpm --filter @vibecoding/backend db:generate",
    "db:migrate": "pnpm --filter @vibecoding/backend db:migrate",
    "db:push": "pnpm --filter @vibecoding/backend db:push"
  },
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@7.2.5"
    }
  }
}
